{
  "name": "coinhub-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend API pour CoinHub - Application de gestion de budget personnel",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "node --loader tsx src/server.ts",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "budget",
    "finance",
    "api",
    "typescript",
    "nodejs"
  ],
  "author": "Milan Magal",
  "license": "ISC",
  "dependencies": {
    "argon2": "^0.31.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jose": "^6.1.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "xss": "^1.0.14",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.15.6",
    "artillery": "^2.0.26",
    "drizzle-kit": "^0.31.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
